APP_NAME=public-opinion-api
APP_ENV=develop
APP_KEY=
APP_DEBUG=true
APP_LOG=daily
APP_LOG_LEVEL=debug
APP_LOG_MAX_FILES=90
APP_URL=
LOG_CHANNEL=daily

DB_CONNECTION=mysql
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# SQL日志配置
SQL_LOG_ENABLED=true
SQL_LOG_SLOW_ONLY=false
SQL_SLOW_QUERY_THRESHOLD=1000

REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=
# 业务使用7库
REDIS_DB=7
# 缓存使用8库
REDIS_CACHE_DB=8
# Redis 前缀设置为空，避免与缓存前缀重复
REDIS_PREFIX=

CACHE_DRIVER=redis

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Volcengine TOS Configuration
# 火山云对象存储配置
FILESYSTEM_DISK=local
VOLCENGINE_ACCESS_KEY=
VOLCENGINE_SECRET_KEY=
VOLCENGINE_REGION=
VOLCENGINE_BUCKET=
# 公网端点 - 用于生成文件访问 URL
VOLCENGINE_ENDPOINT=
# 内网端点 - 用于上传操作（可选，火山云服务器内部使用，可节省公网带宽费用）
# 示例: tos-cn-beijing.ivolces.com
VOLCENGINE_INTERNAL_ENDPOINT=
VOLCENGINE_URL=
VOLCENGINE_SCHEMA=https
VOLCENGINE_VISIBILITY=public

# 文件上传配置
MAX_UPLOAD_SIZE=10240
# ALLOWED_MIMES=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,zip,mp4,mp3
UPLOAD_CHECK_MIME_TYPE=true
UPLOAD_GENERATE_UNIQUE_NAMES=true
UPLOAD_SANITIZE_FILENAMES=true
UPLOAD_MAX_FILENAME_LENGTH=255

# Insight 舆情数据同步配置
INSIGHT_SYNC_TOKEN=
